<Window x:Class="SnoopyCarWPF.AgendamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Agendamentos" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Formulário de Novo Agendamento -->
        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
            <StackPanel>
                <Label Content="Novo Agendamento" FontSize="16" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5">
                        <Label Content="Cliente:"/>
                        <ComboBox x:Name="ClienteComboBox" DisplayMemberPath="Nome"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5">
                        <Label Content="Data:"/>
                        <DatePicker x:Name="DataDatePicker"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5">
                        <Label Content="Hora:"/>
                        <ComboBox x:Name="HoraComboBox"/>
                    </StackPanel>

                    <Button Grid.Column="3" x:Name="BtnAgendar" Content="Agendar" Width="100" VerticalAlignment="Bottom" Margin="10,0,0,5" Click="BtnAgendar_Click"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Lista de Agendamentos -->
        <GroupBox Grid.Row="1" Header="Agendamentos" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0" x:Name="AgendamentosDataGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding NomeCliente}" Width="*"/>
                        <DataGridTextColumn Header="Data e Hora" Binding="{Binding DataHora, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="BtnConcluir" Content="Marcar como Concluído" Margin="5" Click="BtnConcluir_Click"/>
                    <Button x:Name="BtnCancelar" Content="Cancelar Agendamento" Margin="5" Click="BtnCancelar_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
