<Window x:Class="SnoopyCarWPF.ClientesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Clientes" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Coluna da Lista de Clientes -->
        <DataGrid Grid.Column="0" x:Name="ClientesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="ClientesDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="120"/>
                <DataGridTextColumn Header="Veículo" Binding="{Binding Veiculo}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Coluna do Formulário de Cadastro/Edição -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <Label Content="Detalhes do Cliente" FontSize="16" FontWeight="Bold"/>

            <Label Content="Nome:" Margin="0,10,0,0"/>
            <TextBox x:Name="NomeTextBox"/>

            <Label Content="Telefone:" Margin="0,10,0,0"/>
            <TextBox x:Name="TelefoneTextBox"/>

            <Label Content="Endereço:" Margin="0,10,0,0"/>
            <TextBox x:Name="EnderecoTextBox"/>

            <Label Content="Veículo (Modelo/Placa):" Margin="0,10,0,0"/>
            <TextBox x:Name="VeiculoTextBox"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="BtnAdicionar" Content="Adicionar" Width="80" Click="BtnAdicionar_Click"/>
                <Button x:Name="BtnSalvar" Content="Salvar" Width="80" Margin="10,0" Click="BtnSalvar_Click"/>
                <Button x:Name="BtnExcluir" Content="Excluir" Width="80" Click="BtnExcluir_Click"/>
            </StackPanel>
            <Button x:Name="BtnLimpar" Content="Limpar Campos" Margin="0,10,0,0" Click="BtnLimpar_Click"/>
        </StackPanel>
    </Grid>
</Window>
