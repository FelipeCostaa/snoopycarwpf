<Window x:Class="SnoopyCarWPF.ProdutosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciamento de Produtos/Insumos" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Coluna da Lista de Produtos -->
        <DataGrid Grid.Column="0" x:Name="ProdutosDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="ProdutosDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome do Produto" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Coluna do Formulário de Cadastro/Edição -->
        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <Label Content="Detalhes do Produto" FontSize="16" FontWeight="Bold"/>

            <Label Content="Nome:" Margin="0,10,0,0"/>
            <TextBox x:Name="NomeProdutoTextBox"/>

            <Label Content="Quantidade em Estoque:" Margin="0,10,0,0"/>
            <TextBox x:Name="QuantidadeTextBox"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button x:Name="BtnAdicionarProduto" Content="Adicionar" Width="70" Click="BtnAdicionarProduto_Click"/>
                <Button x:Name="BtnSalvarProduto" Content="Salvar" Width="70" Margin="5,0" Click="BtnSalvarProduto_Click"/>
                <Button x:Name="BtnExcluirProduto" Content="Excluir" Width="70" Click="BtnExcluirProduto_Click"/>
            </StackPanel>
            <Button x:Name="BtnLimparProduto" Content="Limpar Campos" Margin="0,10,0,0" Click="BtnLimparProduto_Click"/>
        </StackPanel>
    </Grid>
</Window>
